<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:background="@android:color/darker_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imgs_pro"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/wan_android"
            android:layout_toRightOf="@id/imgs_pro"
            android:id="@+id/img_pro"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_pro"
            android:text="123"
            android:id="@+id/title_pro"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msg_pro"
            android:layout_below="@id/title_pro"
            android:layout_toRightOf="@id/imgs_pro"
            android:text="12313212"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:layout_above="@id/texttime_pro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/texttime_pro"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgs_pro"
            android:text="15"
            android:layout_alignBottom="@id/imgs_pro"/>

        <TextView
            android:id="@+id/authro_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/texttime_pro"
            android:text="15"
            android:layout_alignBottom="@id/imgs_pro"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
