<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:background="@android:color/darker_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/wan_android"
            android:id="@+id/img_home"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="123"
            android:id="@+id/title_home"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msg_home"
            android:layout_below="@id/img_home"
            android:text="12313212"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/msg_home"
            android:src="@drawable/follow_unselected"
            android:layout_marginLeft="10dp"
            android:id="@+id/like_home"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/msg_home"
            android:src="@drawable/time"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/like_home"
            android:id="@+id/time_home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/texttime_home"
            android:layout_below="@id/msg_home"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/time_home"
            android:text="15"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
